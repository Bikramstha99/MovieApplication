@model MovieApplication.Models.Dto.UpdateMovie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UpdateMovie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        <dd>
            <img src="@Model.Image" style="width: 220px; height: 250px; cursor:pointer" />
        </dd>
        </dt>
        <br />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<div class="card card-outline-secondary my-4">
    <div class="card-header">
        <b>Comment & Rating Section</b>
    </div>
    <div class="card-body">
        <div>
            @foreach (var comment in ViewBag.Comments)
            {
                <div>
                    <p>@comment.CommentDesc</p>
                    <small class="text-muted">Posted By @comment.IdentityUser.UserName on @comment.TimeStamp</small>
                    <br>
                    <a class="btn-color-blue align-text-bottom" asp-action="Edit" asp-controller="Comment" asp-route-id="@comment.CommentId">Edit</a> |
                    <a class="btn-color" asp-action="Delete" asp-controller="Comment" asp-route-id="@comment.CommentId">Delete</a>

                    <hr>
                </div>
            }
        </div>
    </div>
